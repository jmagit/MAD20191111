@model IEnumerable<Nuevo.Models.Customer>

@{
    ViewBag.Title = "Clientes";
}

<h1>ESTA ES LA VERSION DE MOVILES</h1>
<h2>Mantenimiento de clientes</h2>

<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>@Html.ActionLink("Nuevo", "Create")</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Title + " " + item.FirstName + " "
                + item.MiddleName + " " + item.LastName, 
                "Details", new { id = item.CustomerID })
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.CustomerID }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.CustomerID })
        </td>
    </tr>
}

</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li>
            <a href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        @for(var i = 0; i < ViewBag.NPaginas; i++) {
            <li>@Html.ActionLink((i + 1).ToString(), "Index", new { page = i, rows = 10 })</li>
        }
        <li>
            <a href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>